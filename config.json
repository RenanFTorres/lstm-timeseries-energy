{
    "dataset": {
      "name": "experiment_dataset",
      "type": "time_series",
      "path": "/path/to/dataset",
      "format": "csv",
      "group_by": {
        "days": [3, 5, 7, 9],
        "hours": [1, 4, 8, 12, 24, 36, 48, 60]
      },
      "split_ratios": [
        {"train": 0.1, "test": 0.9},
        {"train": 0.2, "test": 0.8},
        {"train": 0.3, "test": 0.7},
        {"train": 0.4, "test": 0.6},
        {"train": 0.5, "test": 0.5},
        {"train": 0.6, "test": 0.4},
        {"train": 0.7, "test": 0.3},
        {"train": 0.8, "test": 0.2},
        {"train": 0.9, "test": 0.1}
      ]
    },
    "training": {
      "batch_size_days": [5, 10, 15, 30],
      "batch_size_hours": [32, 64, 128, 256, 512, 640],
      "patience": [1, 2, 3, 4, 5],
      "optimizer": ["adam", "rmsprop", "sgd"],
      "learning_rate": [0.001, 0.0005, 0.0001],
      "loss_function": ["mean_squared_error", "mean_absolute_error"],
      "metrics": ["accuracy", "mean_absolute_error", "mean_squared_error"],
      "shuffle": [true, false],
      "stateful": [false, true],
      "activation": ["tanh", "sigmoid"],
      "neurons":[10, 25, 50, 75, 100, 125, 150, 200],
      "timesteps_days": [3, 9, 12, 18, 24, 36],
      "timesteps_hours": [12, 24, 36, 48, 96, 144, 240, 480, 720],
      "dropout": [0.2, 0.3, 0.4]
    },
    "testing": {
      "batch_size": 64,
      "metrics": ["accuracy", "mean_absolute_error", "mean_squared_error"],
      "verbose": 1
    },
    "validation": {
      "method": "k-fold",
      "k": 5,
      "validation_split": 0.1
    },
    "time_horizon": {
      "hours": [1, 4, 6, 12, 24, 48],
      "days": [3, 5, 7, 15, 30, 45, 60, 90, 120]
    }
  }